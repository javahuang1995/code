<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 开启使用开发模式，详细错误提示 -->
	<constant name="struts.devMode" value="true" />
	<!-- 指定每次请求到达，重新加载资源文件 -->
	<constant name="struts.i18n.reload" value="true" />
	<!-- 指定每次配置文件更改后，自动重新加载 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<action name="hello" class="com.action.TestAction">
			<result name="fail">/fail.jsp</result>
			<result name="success">/success.jsp</result>
			<result name="s2">/success.jsp</result>
		</action>


		<action name="init" class="com.action.TestAction" method="init">
			<result>/init.jsp</result>
		</action>
		<action name="next" class="com.action.TestAction" method="next">
			<result name="next">step1</result>
		</action>

		<action name="step1" class="com.action.b" method="init">
			<result>/step.jsp</result>
		</action>
		<action name="test" class="com.action.b">
			<result name="xx">step2</result>
		</action>
		
		
		<action name="step2" class="com.action.c">
			<result>/step.jsp</result>
		</action>

	</package>
</struts>
